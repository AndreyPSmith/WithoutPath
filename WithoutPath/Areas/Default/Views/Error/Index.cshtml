@{
    ViewBag.Title = "Without Error";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WithoutPath</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="main-menu">
        <ul>
            <li>
                <a href="@Url.Action("Index", "Home", new { area = "Default" })" data-toggle="tooltip" data-placement="right" title="Home">
                    <img src="@Url.Content("~/Content/images/browser.svg")" alt="Logo" class="logo-svg">
                </a>
            </li>
        </ul>
    </nav>

    <div id="Error">
        <div class="error">
            <p>
                В случае неполадок:<br>
                <ul>
                    <li>Выдернуть шнур</li>
                    <li>Выдавить стекло</li>
                    <li>Ждать ответного гудка</li>
                </ul>
            </p>
            <img title="Это bug. Ему нет никакого дела до вас." class="bug" src="~/Content/images/bug.gif" />
        </div>
    </div>
</body>
</html>
